# Configuración de Base de Datos para Pruebas
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=astrocode_test
DB_PORT=3306

# Configuración de JWT para Pruebas
JWT_SECRET=test_jwt_secret_key_for_integration_tests_only
JWT_EXPIRES_IN=24h

# Configuración del Servidor para Pruebas
PORT=4001
NODE_ENV=test

# Configuración de GraphQL para Pruebas
GRAPHQL_ENDPOINT=http://localhost:4001/graphql
GRAPHQL_PLAYGROUND=false
GRAPHQL_INTROSPECTION=true

# Configuración de Logging para Pruebas
LOG_LEVEL=error
LOG_FORMAT=simple

# Configuración de Timeouts para Pruebas
CODE_EXECUTION_TIMEOUT=10000
DATABASE_CONNECTION_TIMEOUT=5000
HTTP_REQUEST_TIMEOUT=15000

# Configuración de Límites para Pruebas
MAX_CODE_LENGTH=5000
MAX_USERS_IN_RANKING=100
MAX_DAILY_CHALLENGES=1

# Configuración de Recursos Externos para Pruebas
EXTERNAL_RESOURCES_ENABLED=true
RESOURCE_VALIDATION_TIMEOUT=5000

# Configuración de Seguridad para Pruebas
BCRYPT_ROUNDS=4
RATE_LIMIT_ENABLED=false
CORS_ENABLED=true

# URLs de Prueba para Recursos Externos
TEST_VALID_URL=https://httpbin.org/status/200
TEST_INVALID_URL=https://httpbin.org/status/404
TEST_TIMEOUT_URL=https://httpbin.org/delay/10

# Configuración de Python Runner para Pruebas
PYTHON_RUNNER_ENABLED=true
PYTHON_EXECUTABLE=python
PYTHON_TIMEOUT=5000

# Configuración de Cache para Pruebas (si aplica)
CACHE_ENABLED=false
CACHE_TTL=300

# Configuración de Email para Pruebas (si aplica)
EMAIL_ENABLED=false
EMAIL_FROM=test@astrocode.com

# Configuración de Archivos para Pruebas
UPLOAD_MAX_SIZE=1048576
UPLOAD_ALLOWED_TYPES=.py,.txt,.md

# Configuración de Monitoreo para Pruebas
MONITORING_ENABLED=false
METRICS_ENABLED=false

# Configuración de Debug para Pruebas
DEBUG_MODE=true
VERBOSE_LOGGING=false

# Configuración específica para diferentes tipos de pruebas
TEST_USER_EMAIL=testuser@astrocode.com
TEST_USER_PASSWORD=TestPassword123!
TEST_USER_NAME=Test User
TEST_ADMIN_EMAIL=admin@astrocode.com
TEST_ADMIN_PASSWORD=AdminPassword123!