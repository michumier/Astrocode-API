{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}