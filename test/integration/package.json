{
  "name": "astrocode-integration-tests",
  "version": "1.0.0",
  "description": "Pruebas de integraci√≥n para Astrocode API",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:user": "jest user-registration.test.ts user-login.test.ts",
    "test:exercise": "jest exercise-execution.test.ts",
    "test:daily": "jest daily-challenge.test.ts",
    "test:ranking": "jest ranking.test.ts",
    "test:resources": "jest external-resources.test.ts",
    "test:single": "jest --testNamePattern",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "clean": "rimraf coverage .nyc_output",
    "setup-db": "ts-node global-setup.ts",
    "teardown-db": "ts-node global-teardown.ts"
  },
  "jest": {
    "displayName": "Integration Tests",
    "testMatch": [
      "**/*.test.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "globalSetup": "<rootDir>/global-setup.ts",
    "globalTeardown": "<rootDir>/global-teardown.ts",
    "testTimeout": 30000,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "../../src/**/*.ts",
      "!../../src/**/*.d.ts",
      "!../../src/**/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "verbose": true,
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 1
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "rimraf": "^4.4.0",
    "ts-node": "^10.9.0"
  },
  "dependencies": {
    "@apollo/client": "^3.7.0",
    "apollo-server-express": "^3.12.0",
    "graphql": "^16.6.0",
    "mysql2": "^3.2.0",
    "dotenv": "^16.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "node-fetch": "^2.6.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node-fetch": "^2.6.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "integration-tests",
    "graphql",
    "apollo",
    "mysql",
    "jest",
    "typescript"
  ],
  "author": "Astrocode Team",
  "license": "MIT"
}